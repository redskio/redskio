<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="56.5dp"
android:layout_columnWeight="1"
android:id="@+id/dialog_sub_layout"
android:background="#ffffff"
android:layout_marginTop="1.5dp"
android:layout_marginBottom="1.5dp"
android:layout_marginLeft="0.75dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_sub_text"
    android:textColor="#000000"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15.5dp"
    android:textSize="12sp" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@null"
    android:id="@+id/dialog_sub_check"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10.5dp"
    android:button="@drawable/checkbox_dialog" />
</RelativeLayout>