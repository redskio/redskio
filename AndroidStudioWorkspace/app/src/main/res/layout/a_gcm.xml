<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/gcm_background"
	android:gravity="center_horizontal|top"
	android:paddingLeft="30dip"
	android:paddingRight="30dip"
	android:paddingTop="160dip"
>
    <RelativeLayout
        android:id="@+id/gcm_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#C0000000"
	    android:padding="15dip"
	>
		<LinearLayout 
		    android:id="@+id/gcm_layout_icon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true" 
		>
		    <ImageView
		        android:id="@+id/gcm_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@mipmap/ic_launcher"
		    />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/gcm_layout_text"
		    android:layout_toRightOf="@id/gcm_layout_icon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		>
		    <TextView
		        android:id="@+id/gcm_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:textSize="18sp"
		        android:textStyle="bold"
		    />
			<TextView
		        android:id="@+id/gcm_message"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:textSize="18sp"
		       	android:ellipsize="end"
		       	android:maxLines="2"	        
		    />
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>