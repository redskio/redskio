<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context="kr.whatshoe.WhatShoe.PointFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ffffff"
                android:elevation="1dp"
                android:outlineProvider="bounds">

                <ImageView
                    android:id="@+id/coupon_image_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/gift_detail_5000" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coupon_image_detail"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="구두 닦이 쿠폰"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView18"
                    android:layout_centerHorizontal="true"
                    android:text="5000 원"
                    android:textColor="@color/color_red"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dotted"
                    android:layerType="software"
                    android:id="@+id/view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/imageView9"
                    android:layout_toEndOf="@+id/imageView9"
                    android:layout_alignTop="@+id/imageView9"
                    android:layout_toRightOf="@+id/imageView9"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:src="@drawable/gift_logo"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"
                    android:layout_below="@+id/textView23"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용처 | 왓슈"
                    android:id="@+id/textView24"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="21dp"
                    android:layout_below="@+id/view"
                    android:layout_alignLeft="@+id/view"
                    android:layout_alignStart="@+id/view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온라인"
                    android:id="@+id/textView25"
                    android:background="#cacaca"
                    android:textColor="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/textView24"
                    android:layout_toRightOf="@+id/textView24"
                    android:layout_toEndOf="@+id/textView24"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="1dp"
                android:outlineProvider="bounds">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[상품 소개]\n왓슈 선물하기로 깨끗한 구두 뿐 아니라 따뜻한 마음까지 전하세요!"
                    android:id="@+id/textView26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="[이용 안내]\n선물받은 왓슈 쿠폰에 적힌 쿠폰번호를 메인 메뉴의 좌측 상단 쿠폰하기에서 입력하시기 바랍니다.\n취소 및 환불: 상품권 사용 후에는 주문 취소가 불가합니다."
                    android:id="@+id/textView27" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[유의 사항]\n본 상품은 온라인 사용 상품입니다. \n사용기간이 명시된 상품의 경우 사용기간을 반드시 확인해 주세요."
                    android:id="@+id/textView28" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="선 물 하 기"
        android:id="@+id/nextStepBtn"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_red"
        android:textColor="@color/color_white"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
