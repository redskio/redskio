<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forman_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:text="@string/forman_title"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="7.25dp"
                android:layout_marginRight="15.5dp"
                android:layout_marginTop="7.25dp"
                android:background="@null"
                android:src="@drawable/button_dialog_cancle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="252dp">

            <ImageView
                android:id="@+id/push_men_default"
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/push_men1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/forman_wash_img"
                android:src="@drawable/push_men_shine"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/forman_whole_img"
                android:src="@drawable/push_men_allheel"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/forman_sub_img"
                android:src="@drawable/push_men_shapeheel"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/forman_half_img"
                android:src="@drawable/push_men_sole"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eaeaea"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/forman_wash_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56.5dp"
                    android:layout_marginRight="0.75dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/forman_wash_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.5dp"
                        android:focusable="false"
                        android:text="@string/forman_fix_wash_menu"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/forman_wash_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.5dp"
                        android:button="@drawable/checkbox_dialog"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forman_whole_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56.5dp"
                    android:layout_marginLeft="0.75dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/forman_whole_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.5dp"
                        android:focusable="false"
                        android:text="@string/forman_fix_whole_menu"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/forman_whole_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.5dp"
                        android:button="@drawable/checkbox_dialog"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eaeaea"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/forman_half_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56.5dp"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginRight="0.75dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/forman_half_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.5dp"
                        android:text="@string/forman_fix_half_menu"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/forman_half_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.5dp"
                        android:button="@drawable/checkbox_dialog"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forman_sub_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56.5dp"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="0.75dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/forman_sub_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.5dp"
                        android:text="@string/forman_fix_sub_menu"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/forman_sub_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.5dp"
                        android:button="@drawable/checkbox_dialog"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="#eaeaea"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/dialogTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15.5dp"
                android:text="@string/dialog_totalprice"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialogTotalPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10.5dp"
                android:text="0원"
                android:textColor="@color/color_login_default"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/bottonroundlayout"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="New Button"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>